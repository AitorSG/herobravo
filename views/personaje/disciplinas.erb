<section>
	<header>
		<h2>Habilidades del <%= char = request.path_info.split('/').last %></h2>
	</header>
	<link rel="stylesheet" href="../css/bravo.css" />
	<table id='tresp'>
		<thead>
			<tr><% disciplinas.each do |d| %>
					<th><%= d.capitalize %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% send(char+"s").each do |c| %>
				<tr><td><%= c[:id] %></td>
					<td><img src='<%= "../images/skills/#{char}/#{c[:name]}.png" %>' alt='<%= c[:name] %>', id='icon' /></td>
					<td><%= c[:type].capitalize %></td>
					<td><%= c[:name] %></td>
					<td><i><%= c[:description] %></i></td>
					<td><%= c[:nivel] || "Sin definir" %></td>
					<td><%= c[:requisitos] || "In progress" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</section>