<section>
	<header>
		<center><h2>Pociones</h2></center>
	</header>
	<table>
		<tbody>
			<tr>
				<% if @heroe.pociones %>
					<% @heroe.brebajes.each do |pot| %>
						<td><%= erb :"display/item", :locals => {:item => pot} %></td>
					<% end %>
				<% else %>
					<td>Sin pociones</td>
				<% end %>
			</tr>
		</tbody>
	</table>
</section>