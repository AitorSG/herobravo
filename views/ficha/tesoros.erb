<section>	
	<header>
		<center><h2>Tesoros</h2></center>
	</header>
	<table id='table-2'>
		<thead>
			<tr><% engarces.each do |engarce| %>
					<th><%= engarce.capitalize %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<tr>				
				<% engarces.each do |engarce| %>
					<td>
						<% if tesoros = @heroe.tesoro[engarce.to_sym] %>
							<table id='table-2'>
								<tbody>
									<tr>
										<% tesoros.each do |t| %>
	                    	    			<td><%= erb :"display/engarce", :locals => { :engarce => send(engarce)[t] } %></td>
										<% end %>
									</tr>
								</tbody>
							</table>
						<% else %>
							El h√©roe no tiene <%= engarce %>.
						<% end %>
					</td>
				<% end %>
			</tr>
		</tbody>
	</table>
</section>