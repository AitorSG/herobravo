<section>
	<header>
		<h2 text-align='center'>Habilidades</h2>
	</header>
	
	<table id='tresp'>
		<thead>
			<tr><% habs.each do |h| %>
					<th><%= h.capitalize %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% heroe.habilidades.each do |hab| %>
				<tr><td><%= erb :'display/skill', :locals => {:skill => hab} %></td>
					<td><%= hab.name %></td>
					<td><%= hab.description %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</section>