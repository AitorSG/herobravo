<header>
	<h2>Escuelas de la magia</h2>
</header>
<table id='tresponsive'>
	<thead>
		<tr>
			<th>Glifo</th>
			<th>Escuela</th>
			<th colspan=4>Listas de Hechizo</th>
		</tr>
	</thead>
	<tbody>
		<% %w(Aire Fuego Agua Tierra Sombras Hielo Arena Tenebro Sangre Luz).each do |escuela| %>
			<tr>
				<td>
					<a href='<%= "/#{escuela.gsub('Luz','plegarias').downcase}/1" %>'>
					<% img_path = "'../images/magia/schools/#{escuela}.png'" %>
						<img src=<%=img_path%> alt='<%= escuela %>' id='icon3' />
					</a>
				</td>
				<td><%= escuela %></td>
				<% 4.times do |nivel| %>
					<td>
						<a href='<%= "/#{escuela.gsub('Luz','plegarias').downcase}/#{nivel+1}" %>'>
							<%= nivel+1 %>
						</a>
					</td>
				<% end %>
			</tr>
		<% end %>	
	</tbody>
</table>
